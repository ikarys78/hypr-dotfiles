configuration {
	display-run: "ï„  ";
	icon-theme: "Papirus-Light";
	fixed-num-lines: false;
        font: "JetBrainsMono Nerd Font 12" ;
}

@theme "colors.rasi"

scrollbar {
	width: 0;
	handle-width: 0;
}

window {
	fullscreen: true;
	background-color: transparent;
	border: 0;
	\\	padding: 38% 40% 25% 40%;
	
	padding: 20% 25% 20% 25%
	children: [mainbox];	
	border: 2px;
	border-radius: 0px;
	border-color: @bg3;
}

mainbox {
	y-offset: 0%;
	location: center;
	anchor: north;
	spacing: 0;
	background-color: @transparent;
	border: 2px;
	border-color: @bg3;
	transparency: "real";
	children: [inputbar, listview];
}

inputbar {
	background-color: @bg;
	text-color: @fg;
	children: [prompt, entry];
	border: 2px;
	border-color: @bg3;
}

prompt {
	background-color: @transparent;
	text-color: @fg;
	padding: 0.5em 0.5em 0.5em 0.5em;
}

entry {
	background-color: @transparent;
	text-color: @fg;
	placeholder: "";
	padding: 0.5em 0 0.5em 0.5em;
}

listview {
	background-color: @transparent;
	cycle: false;
	dynamic: false;
	padding: 0 0 0 0;
	border: 2px;
	border-color: @bg3;
	columns: 1;
	spacing: 0;
	children: [element];
}

element {
	padding: 0px;
	//border: 0;
	margin: 0;
}


element selected {
	background-color: @transparent;
	text-color: @fg;
	border: 0;
}

element-text {
	background-color: @bg	;
	text-color: @fg;
	padding: 0.25em 0.2em 0.25em 0.2em;
	border: 0;
}

element-text selected {
	background-color: @bg2;
	text-color: @fg;
	padding: 0.2em 0.2em 0.2em 0.2em;
	border: 0;
}
